{
    "openapi": "3.0.0",
    "info": {
        "title": "Compassolisa",
        "description": "This API RESTful includes the four basic CRUD operations and it is about a luxury and semi luxury car rental system.",
        "contact": {
            "email": "ludico1959@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api/v1/",
            "description": "Test API"
        }
    ],
    "paths": {
        "/": {
            "post": {
                "summary": "Add a new car to the system.",
                "description": "This route is responsible to create a new car.",
                "tag": ["Car"],
                "requestbody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Car"
                            },
                            "examples": {
                                "car": {
                                    "modelo": "GM S10 2.8",
                                    "cor": "branco",
                                    "ano": 2021,
                                    "acessorios": [{
                                        "descricao": "Ar-condicionado"
                                    }]
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Car": {
                "type": "object",
                "properties": {
                    "modelo": {
                        "type": "string"
                    },
                    "cor": {
                        "type": "string"
                    },
                    "ano": {
                        "type": "number"
                    },
                    "acessorios": [{
                        "descricao": {
                            "type": "string"
                        }
                    }],
                    "quantidadePassageiros": {
                        "type": "number"
                    },
                    "id": {
                        "type": "string"
                    }
                }
            }
        }
    }
}