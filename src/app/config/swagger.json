          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string",
                    "example": "joaozinho ciclano"
                  },
                  "cpf": {
                    "type": "string",
                    "example": "131.147.860-49"
                  },
                  "data_nascimento": {
                    "type": "string",
                    "format": "date",
                    "example": "03/03/2000"
                  },
                  "email": {
                    "type": "string",
                    "example": "joazinho@email.com"
                  },
                  "senha": {
                    "type": "string",
                    "example": 123456
                  },
                  "habilitado": {
                    "type": "string",
                    "example": "sim",
                    "enum": [
                      "sim",
                      "não"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nome": {
                      "type": "string"
                    },
                    "cpf": {
                      "type": "string"
                    },
                    "data_nascimento": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "email": {
                      "type": "string"
                    },
                    "habilitado": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
