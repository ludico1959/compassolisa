  "paths": {
    "/authenticate/": {
      "post": {
        "tags": [
          "authenticate"
        ],
        "summary": "Authenticate email and password client",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "joazinho@email.com"
                  },
                  "senha": {
                    "type": "string",
                    "example": 123456
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "habilitado": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/car/": {
      "post": {
        "tags": [
          "cars"
        ],
        "summary": "Add a new car to the database",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "modelo": {
                    "type": "string",
                    "example": "GM S10 2.8"
                  },
                  "cor": {
                    "type": "string",
                    "example": "branco"
                  },
                  "ano": {
                    "type": "number",
                    "example": 2021
                  },
                  "acessorios": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "descricao": {
                          "type": "string",
                          "example": "Ar Condicionado"
                        }
                      }
                    }
                  },
                  "quantidadePassageiros": {
                    "type": "number",
                    "example": 5
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "number"
                    },
                    "modelo": {
                      "type": "string"
                    },
                    "cor": {
                      "type": "string"
                    },
                    "ano": {
                      "type": "number"
                    },
                    "acessorios": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "descricao": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "quantidadePassageiros": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "cars"
        ],
        "summary": "List all cars or list specific cars by parameter from the database",
        "parameters": [
          {
            "name": "modelo",
            "in": "query",
            "description": "car model",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "cor",
            "in": "query",
            "description": "car color",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "ano",
            "in": "query",
            "description": "car year",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "descricao",
            "in": "query",
            "description": "car accessory (as a description)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "quantidadePassageiros",
            "in": "query",
            "description": "number of passengers",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "limit number of results per page",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "total",
            "in": "query",
            "description": "number of total pages",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "current offset",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "offsets",
            "in": "query",
            "description": "number of offsets",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "veiculos": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "_id": {
                            "type": "number"
                          },
                          "modelo": {
                            "type": "string"
                          },
                          "cor": {
                            "type": "string"
                          },
                          "ano": {
                            "type": "number"
                          },
                          "acessorios": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "descricao": {
                                  "type": "string"
                                }
                              }
                            }
                          },
                          "quantidadePassageiros": {
                            "type": "number"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
